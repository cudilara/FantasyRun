<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dilaramadinger.fantasyrun.MyInfoFragment"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="567dp"
        android:layout_marginTop="67dp"
        android:text="@string/my_info_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="39dp"
        android:text="@string/my_info_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/textViewAgeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:hint="@string/my_info_age"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textViewAgeLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewAgeLabel" />

    <TextView
        android:id="@+id/textViewAgeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        android:text="@string/my_info_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/textViewWeightInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:hint="@string/my_info_weight"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textViewHeightLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeightLabel" />

    <TextView
        android:id="@+id/textViewWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/my_info_height"
        app:layout_constraintStart_toStartOf="@+id/textViewWeightInput"
        app:layout_constraintTop_toBottomOf="@+id/textViewWeightInput" />

    <EditText
        android:id="@+id/textViewHeightInput"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginBottom="19dp"
        android:layout_marginTop="17dp"
        android:hint="@string/my_info_height"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/savedIndicator"
        app:layout_constraintStart_toStartOf="@+id/textViewWeightLabel"
        app:layout_constraintTop_toTopOf="@+id/textViewWeightLabel" />

    <TextView
        android:id="@+id/textViewHeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/my_info_weight"
        app:layout_constraintStart_toStartOf="@+id/textViewAgeInput"
        app:layout_constraintTop_toBottomOf="@+id/textViewAgeInput" />

    <Button
        android:id="@+id/bSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="166dp"
        android:layout_marginTop="166dp"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toStartOf="@+id/savedIndicator"
        app:layout_constraintStart_toStartOf="@+id/savedIndicator"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeightLabel" />

    <TextView
        android:id="@+id/savedIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/bSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
